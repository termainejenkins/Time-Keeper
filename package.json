{
  "name": "time-keeper",
  "version": "1.0.0",
  "description": "A minimalist desktop HUD for tracking time and tasks",
  "main": "dist/main.js",
  "build": {
    "appId": "com.timekeeper.app",
    "productName": "Time Keeper",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "src/renderer/assets/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "publisherName": "Termaine Jenkins",
      "verifyUpdateCodeSignature": false
    },
    "mac": {
      "target": "dmg",
      "icon": "src/renderer/assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "src/renderer/assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/7zip-bin/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules/7zip-bin/win/x64/7za.exe",
        "to": "7zip-bin/win/x64/7za.exe"
      }
    ]
  },
  "scripts": {
    "build:main": "tsc",
    "start": "npm run build:main && electron .",
    "build:renderer": "vite build --config vite.config.ts",
    "dev": "npm run build:renderer && npm run build:main && electron .",
    "build": "npm run build:renderer && npm run build:main",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac",
    "package:linux": "npm run build && electron-builder --linux",
    "preview:renderer": "vite preview --config vite.config.ts",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "author": "Termaine Jenkins (aka TJ)",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.17.46",
    "@types/react": "^18.3.21",
    "@types/react-dom": "^18.3.7",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.2.0",
    "copyfiles": "^2.4.1",
    "electron": "^28.3.3",
    "electron-builder": "^24.6.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3",
    "vite": "^5.2.0",
    "vite-plugin-static-copy": "^3.0.0"
  },
  "dependencies": {
    "electron-oauth2": "^3.0.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "framer-motion": "^11.18.2",
    "googleapis": "^148.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.17",
    "uuid": "^11.1.0"
  }
}
