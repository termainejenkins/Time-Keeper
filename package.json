{
    "name":  "time-keeper",
    "version":  "1.0.2",
    "description":  "A minimalist desktop HUD for tracking time and tasks",
    "main":  "dist/main.js",
    "build":  {
                  "appId":  "com.timekeeper.app",
                  "productName":  "Time Keeper",
                  "directories":  {
                                      "output":  "release"
                                  },
                  "files":  [
                                "dist/**/*",
                                "node_modules/**/*",
                                "package.json"
                            ],
                  "win":  {
                              "target":  "nsis",
                              "icon":  "src/renderer/assets/icon.ico",
                              "artifactName":  "${productName}-Setup-${version}.${ext}",
                              "verifyUpdateCodeSignature":  false
                          },
                  "mac":  {
                              "target":  "dmg",
                              "icon":  "src/renderer/assets/icon.icns"
                          },
                  "linux":  {
                                "target":  "AppImage",
                                "icon":  "src/renderer/assets/icon.png"
                            },
                  "nsis":  {
                               "oneClick":  false,
                               "allowToChangeInstallationDirectory":  true,
                               "createDesktopShortcut":  true,
                               "createStartMenuShortcut":  true
                           },
                  "publish":  {
                                  "provider":  "github",
                                  "owner":  "terma",
                                  "repo":  "TimeKeeper"
                              },
                  "asar":  true,
                  "asarUnpack":  [
                                     "node_modules/7zip-bin/**/*"
                                 ],
                  "extraResources":  [
                                         {
                                             "from":  "node_modules/7zip-bin/win/x64/7za.exe",
                                             "to":  "7zip-bin/win/x64/7za.exe"
                                         }
                                     ]
              },
    "scripts":  {
                    "build:main":  "tsc",
                    "start":  "npm run build:main \u0026\u0026 electron .",
                    "build:renderer":  "vite build --config vite.config.ts",
                    "dev":  "npm run build:renderer \u0026\u0026 npm run build:main \u0026\u0026 electron .",
                    "build":  "npm run build:renderer \u0026\u0026 npm run build:main",
                    "package":  "npm run build \u0026\u0026 electron-builder",
                    "package:win":  "npm run build \u0026\u0026 electron-builder --win",
                    "package:mac":  "npm run build \u0026\u0026 electron-builder --mac",
                    "package:linux":  "npm run build \u0026\u0026 electron-builder --linux",
                    "preview:renderer":  "vite preview --config vite.config.ts",
                    "test":  "jest",
                    "test:watch":  "jest --watch",
                    "test:coverage":  "jest --coverage",
                    "lint":  "eslint . --ext .ts,.tsx",
                    "lint:fix":  "eslint . --ext .ts,.tsx --fix",
                    "format":  "prettier --write \"src/**/*.{ts,tsx}\"",
                    "release:patch":  "powershell -File scripts/create-release.ps1 -Type patch",
                    "release:minor":  "powershell -File scripts/create-release.ps1 -Type minor",
                    "release:major":  "powershell -File scripts/create-release.ps1 -Type major"
                },
    "author":  "Termaine Jenkins (aka TJ)",
    "license":  "MIT",
    "devDependencies":  {
                            "@testing-library/jest-dom":  "^6.6.3",
                            "@testing-library/react":  "^16.3.0",
                            "@testing-library/user-event":  "^14.6.1",
                            "@types/jest":  "^29.5.14",
                            "@types/node":  "^22.15.20",
                            "@types/react":  "^19.1.4",
                            "@types/react-dom":  "^19.1.5",
                            "@types/uuid":  "^10.0.0",
                            "@typescript-eslint/eslint-plugin":  "^8.32.1",
                            "@typescript-eslint/parser":  "^8.32.1",
                            "@vitejs/plugin-react":  "^4.4.1",
                            "copyfiles":  "^2.4.1",
                            "electron":  "^36.2.1",
                            "electron-builder":  "^26.0.12",
                            "eslint":  "^9.27.0",
                            "jest":  "^29.7.0",
                            "lint-staged":  "^16.0.0",
                            "prettier":  "^3.5.3",
                            "ts-jest":  "^29.3.4",
                            "typescript":  "^5.8.3",
                            "vite":  "^6.3.5",
                            "vite-plugin-static-copy":  "^3.0.0"
                        },
    "dependencies":  {
                         "electron-oauth2":  "^3.0.0",
                         "electron-store":  "^8.1.0",
                         "electron-updater":  "^6.6.2",
                         "framer-motion":  "^12.12.1",
                         "googleapis":  "^148.0.0",
                         "react":  "^19.1.0",
                         "react-dom":  "^19.1.0",
                         "tailwindcss":  "^4.1.7",
                         "uuid":  "^11.1.0"
                     },
    "lint-staged":  {
                        "*.{ts,tsx}":  [
                                           "eslint --fix",
                                           "prettier --write"
                                       ]
                    }
}
