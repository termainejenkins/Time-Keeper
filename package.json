{
  "name": "time-keeper",
  "version": "1.0.0",
  "description": "A minimalist desktop HUD for tracking time and tasks",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "tsc && npm run postbuild && electron .",
    "build": "tsc && npm run postbuild",
    "postbuild": "copyfiles -u 2 src/renderer/index.html dist/renderer/",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.57",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "electron": "^28.2.3",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3",
    "copyfiles": "^2.4.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.1",
    "framer-motion": "^11.0.5"
  }
} 