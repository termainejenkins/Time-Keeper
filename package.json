{
  "name": "time-keeper",
  "version": "1.0.0",
  "description": "A minimalist desktop HUD for tracking time and tasks",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "build:renderer": "vite build --config vite.config.ts",
    "dev": "npm run build:renderer && electron .",
    "build": "npm run build:renderer",
    "preview:renderer": "vite preview --config vite.config.ts",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "author": "Termaine Jenkins (aka TJ)",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.15.17",
    "@types/react": "^19.1.3",
    "@types/react-dom": "^19.1.3",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "@vitejs/plugin-react": "^4.2.0",
    "copyfiles": "^2.4.1",
    "electron": "^36.2.0",
    "eslint": "^9.26.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3",
    "vite": "^5.2.0"
  },
  "dependencies": {
    "electron-store": "^10.0.1",
    "framer-motion": "^12.10.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.6"
  }
}
